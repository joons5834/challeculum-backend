<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="companion.challeculum.domains.mission.MissionDao">
    <select id="selectMission" parameterType="Long" resultType="Mission">
        select *
        from mission
        where mission_id = #{id}
    </select>

    <select id="selectAllMissionInfo" resultType="Mission">
        select *
        from mission
    </select>
    <select id="getMissionListByGroupId" resultType="Mission">
        select * from mission where ground_id=#{groupId};
    </select>


    <update id="updateMission" parameterType="Mission">
        update mission
        set assignment=#{assignment},
            ground_id=#{groundId},
            mission_at=#{missionAt}
        where mission_id = #{missionId}
    </update>


    <select id="getMissionList" resultType="mission">
        select *
        from mission
        where ground_id=#{groundId};
    </select>

    <!-- Renew Query(2/25)  -->
    <insert id="insert" parameterType="missionCreateDto" useGeneratedKeys="true" keyProperty="mission_id">
        insert into mission (ground_id, assignment, mission_at)
        values (#{groundId}, #{assignment}, #{missionAt})
    </insert>

    <insert id="insertBatch" parameterType="java.util.List">
        insert into mission(ground_id, assignment, mission_at)
        values
        <foreach item="item" index="index" collection="list"
                 open="" separator="," close="" nullable="true">
            (#{item.groundId}, #{item.assignment}, #{item.missionAt})
        </foreach>
    </insert>


</mapper>