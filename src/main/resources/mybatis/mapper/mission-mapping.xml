<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="companion.challeculum.domains.mission.MissionDao">

    <insert id="registerMission" parameterType="Mission">
        insert into mission (ground_id, assignment, start_at, end_at)
        values (#{ground_id}, #{assignment}, #{startAt}, #{endAt})
    </insert>

    <insert id="addMissionsToGround" parameterType="java.util.List">
        insert into mission(ground_id, assignment, start_at, end_at)
        values
        <foreach item="item" index="index" collection="list"
                 open="" separator="," close="" nullable="true">
            ( (SELECT LAST_INSERT_ID()), #{item.assignment}, #{item.startAt}, #{item.endAt})
        </foreach>
    </insert>

    <select id="selectMission" parameterType="Long" resultType="Mission">
        select *
        from mission
        where id = #{id}
    </select>

    <select id="selectAllMissionInfo" resultType="Mission">
        select *
        from mission
    </select>
    <select id="getMissionListByGroupId" resultType="Mission">
        select * from mission where ground_id=#{groupId};
    </select>
    <select id="getMissionList" resultType="mission">
        select *
        from mission
        where ground_id=#{ground_id}
    </select>

    <update id="updateMission" parameterType="Mission">
        update mission
        set assignment=#{assignment},
            ground_id=#{ground_id},
            start_at=#{startAt},
            end_at=#{endAt}
        where id = #{id}
    </update>
    <delete id="deleteMission" parameterType="long">
        delete
        from mission
        where id = #{id};
    </delete>




</mapper>