<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="companion.challeculum.domains.userlecture.UserLectureDao">
    <insert id="registerLecture" parameterType="userlecturedto">
        INSERT INTO user_lecture(user_id, lecture_id)
        VALUES (#{userId}, #{lectureId})
    </insert>
    <!--Jonghyun-->
    <select id="findUserLecture" resultType="userLecture">
        select * from user_lecture where user_id=#{userId} and lecture_id=#{lectureId};
    </select>
    <!--End of Jonghyun-->

</mapper>